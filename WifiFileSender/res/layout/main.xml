<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <TextView android:id="@+id/host_view"
       android:layout_height="wrap_content"
       android:layout_width="fill_parent"
       android:layout_alignParentTop="true"/>
   <TextView android:id="@+id/client_show"
       android:layout_height="wrap_content"
       android:layout_width="fill_parent"
       android:layout_below="@id/host_view"/>
   <LinearLayout android:id="@+id/host_show"
       android:layout_height="wrap_content"
       android:layout_width="fill_parent"
       android:layout_below="@id/host_view">
        <TextView android:id="@+id/client_count"
       		android:layout_height="wrap_content"
       		android:layout_width="fill_parent"/>
        <TextView android:id="@+id/client_list"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"/>
   </LinearLayout>
  

</RelativeLayout>